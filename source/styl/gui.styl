body
  font-family "Open Sans", Arial, sans
  font-size 12pt
  line-height 1.7
  background-color #f8f8f8
  
a
  color #004294
  
  &:hover,
  &:focus,
  &:active
    opacity .7
    text-decoration underline
    
h1
  font-size 26pt
  margin 0 0 35px
  
h2
  font-size 17pt
  font-weight bold
  margin 35px 0
    
h3
  font-size 12pt
  font-weight bold
  margin 0 0 20px
  line-height 1.2
  
hr
  margin 14px 0
  border 0
  
  &.i-decor
    width 33%
    margin 22px auto
    border 1px solid #0c73b2
    
  &.i-line
    border-top 1px solid #ececec
    
  &.i-size-S
    margin 25px 0
    
  &.i-size-M
    margin 35px 0
    
  &.i-size-L
    margin 50px 0
  
//materialize
  
.container .row
  margin-right -15px !important
  margin-left -15px !important
  margin-bottom 0 !important
  
.side-nav
  background-color #fff
  padding 30px
  font-weight 400
  color #333
      
  &__item
    margin-bottom 20px
    
.b-button
  height 70px
  line-height 70px
  color #fff
  font-weight bold
  font-family "Roboto", "Open Sans", Arial, serif
  text-align center
  border-radius 35px
  padding 0 40px
  display inline-block
  background-color #339999
  transition( background-color 0.2s ease )
  border none
  
  a&:hover
    text-decoration none
    opacity 1
    color #fff
    
  &:hover
    background-color #2c8686
    color #fff
    
  &:active
    background-color #6eb5b5
    color #fff
  
  &.i-size-M
    height 40px
    line-height 40px
    padding 0 24px
    border-radius 20px
    background-color #99cc33
    font-size 10.5pt
    
    &:hover
      background-color #82af29
      color #fff
      
    &:active
      background-color #b5d96e
      color #fff
      
  .b-form-button &
    min-width 262px
  
.b-social-icon
  display inline-block
  width 32px
  height 32px
  background-repeat no-repeat
  background-position center
  background-size cover
  
ul li
  line-height 1.3
  margin-bottom 10px

ol li
  margin-bottom 10px
  
.b-white-section
  background-color #fff
  
table.table
  font-size 10.5pt
  
  tbody > tr
    
    & > th,
    & > td
      padding 13px 20px 14px
      
    &:last-child
    
      & > th,
      & > td
        border-bottom 1px solid #ddd
        
.input-field label
  font-weight normal
  color #333
  
