body
  font-family "Open Sans", Arial, sans
  font-size 12pt
  line-height 1.7
  background-color #f8f8f8
  
a
  color #004294
  
  &:hover,
  &:focus,
  &:active
    opacity .7
    text-decoration underline
    
h3
  font-size 12pt
  font-weight bold
  margin 0 0 20px
  line-height 1.2
  
hr
  margin 14px 0
  border 0
  
  &.i-decor
    width 33%
    margin 22px auto
    border 1px solid #0c73b2
  
//materialize
  
.container .row
  margin-right -15px !important
  margin-left -15px !important
  margin-bottom 0 !important
  
.side-nav
  background-color #fff
  padding 30px
  font-weight 400
  color #333
      
  &__item
    margin-bottom 20px
    
.b-button
  height 70px
  line-height 70px
  color #fff
  font-weight bold
  text-align center
  border-radius 35px
  padding 0 40px
  display inline-block
  background-color #339999
  
  a&:hover
    text-decoration none
    opacity 1
    color #fff
    
  &:hover
    background-color #2c8686
    color #fff
    
  &:active
    background-color #6eb5b5
    color #fff
  