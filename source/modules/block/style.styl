@import '../../styl/component-include.styl'

.b-blocks

  &-item
    background-color #fff
    position relative
    text-align center
    font-size 10.5pt
    box-shadow 0 0 20px rgba( 0,0,0,.1 )
    transition( all .1s ease)
    
    &:hover
      transform( scale(1.03))
      box-shadow 0 0 20px rgba( 0,0,0,.2 )
    
    &__img
      display block
      margin-right -15px
      
      @media( max-width 767px )
        margin-right 0
      
      &:hover
        opacity 1
  
    img
      width 100%
      height auto
      
    &__text
      padding 35px 50px 85px 35px
      
      @media( max-width 767px )
        padding-left 50px
      
    p
      max-height 92px
      overflow hidden
      margin 0
      line-height 1.5
    
    &__button
      position absolute
      bottom 0
      right 0
      display block
      width 50%
      background-color #f4f4f4
      text-align center
      line-height 58px
      
      @media( max-width 767px )
        width 100%
      
      &:hover
        text-decoration none
        
    hr.i-decor
      margin-bottom 27px
    