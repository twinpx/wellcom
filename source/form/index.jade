extends ../layouts/main.jade

block title
  title Form | wellcom

block content
  
  .container
  
    hr.i-size-M
    
    .text-center
    
      h1 Отправить заявку
      
      p Заполните форму и отправьте, мы получим Вашу заявку и свяжемся с Вами.
    
    .row
      .col-sm-8.col-sm-offset-2
      
        form(name='SIMPLE_FORM_1', action='/form/?elemid=1&elemname=%D0%9D%D0%B0%D0%B7%D0%B2%D0%B0%D0%BD%D0%B8%D0%B5+%D1%8D%D0%BB%D0%B5%D0%BC%D0%B5%D0%BD%D1%82%D0%B0&elemurl=%2F111%2F', method='POST', enctype='multipart/form-data')
        
          input#sessid(type='hidden', name='sessid', value='14de4914f140f27b84a31bd622c37812')
          input(type='hidden', name='WEB_FORM_ID', value='1')
          input.validate(name='web_form_submit', value='Сохранить', type='hidden')
          input(type='hidden', name='form_text_3', value='1')
          input(type='hidden', name='form_text_4', value='Название элемента')
          input(type='hidden', name='form_text_5', value='/111/')
          input(type='hidden', name='form_textarea_9', value='1;Название элемента;/111/')
          input#email(name='email', type='text', style='display:none;')
          
          .input-field
            input#name1.validate(name='form_text_1', type='text', required='')
            label(for='name1') Фамилия и имя
          .input-field
            input#name2.validate(name='form_text_2', type='text', required='')
            label(for='name2') Телефон
          .input-field
            input#name6.validate(name='form_text_6', type='text', required='')
            label(for='name6') Email
          .input-field
            input#name7.validate(name='form_text_7', type='text', required='')
            label(for='name7') Дата проведения
          .input-field
            textarea#name8.materialize-textarea(name='form_textarea_8', rows='5')
            label(for='name8') Комментарий
            
          hr
          
          p.text-center Отправляя форму, Вы даете согласие на
            | 
            a( href="" ) обработку персональных данных
            
          hr.i-size-M
            
          .b-form-button.text-center
            button.b-button(type='submit') Отправить
            
        hr
    hr

    